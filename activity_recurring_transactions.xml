<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Button to Add New Recurring Transaction -->
    <Button
        android:id="@+id/addRecurringTransactionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Recurring Transaction"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/black"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView to show the list of transactions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recurringTransactionsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

</LinearLayout>
