<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FinancialReports"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial Reports &amp; Analytics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/black" />

        <!-- Income Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Your Income:"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/incomeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Income Amount"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/edit_text_background" />

        <!-- Expense Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Your Expenses:"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/expenseInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Expense Amount"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/edit_text_background" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />

        <!-- Results Section -->
        <TextView
            android:id="@+id/resultsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Results"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/netBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Balance: "
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advice: "
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
