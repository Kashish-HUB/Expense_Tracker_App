<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout">

    <!-- Main Content (ScrollView to allow scrolling) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar with Hamburger Icon -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Dashboard Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Welcome to the Dashboard!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Scrollable Content -->
        <android.widget.ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- LinearLayout to hold services inside the scroll view -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Service 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="16dp"
                    android:elevation="4dp"
                    android:background="@drawable/service_border">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/service1"
                        android:contentDescription="Service 1 Image"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense and Income Tracking"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Service 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="16dp"
                    android:elevation="4dp"
                    android:background="@drawable/service_border">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Service 2 Image"
                        android:src="@drawable/service2"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget Management"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Service 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="16dp"
                    android:elevation="4dp"
                    android:background="@drawable/service_border">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/service3"
                        android:contentDescription="Service 3 Image"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Financial Reports and Analytics"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Service 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="16dp"
                    android:elevation="4dp"
                    android:background="@drawable/service_border">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/service4"
                        android:contentDescription="Service 4 Image"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recurring Transactions"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Service 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="16dp"
                    android:elevation="4dp"
                    android:background="@drawable/service_border">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/service5"
                        android:contentDescription="Service 5 Image"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Backup and Cloud Sync"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Service 6 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="16dp"
                    android:elevation="4dp"
                    android:background="@drawable/service_border">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/service6"
                        android:contentDescription="Service 6 Image"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal Setting and Savings Tracking"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

            </LinearLayout>
        </android.widget.ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/navigation_header" />

</androidx.drawerlayout.widget.DrawerLayout>
