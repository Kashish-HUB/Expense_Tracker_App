<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F4F6F9"
    android:gravity="center">

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Setting &amp; Savings Tracking"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="30dp"
        android:gravity="center" />

    <!-- Goal Name Input -->
    <EditText
        android:id="@+id/goalNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Goal Name"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Target Amount Input -->
    <EditText
        android:id="@+id/targetAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Target Amount (₹)"
        android:inputType="numberDecimal"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Target Date Input -->
    <EditText
        android:id="@+id/targetDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Target Date (yyyy-mm-dd)"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Save Goal Button -->
    <Button
        android:id="@+id/saveGoalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Goal"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="@drawable/button_bg"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        />

    <!-- Progress Section -->
    <TextView
        android:id="@+id/currentSavingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Savings: ₹0"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Savings Amount Input -->
    <EditText
        android:id="@+id/savingsAmountInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Savings Amount (₹)"
        android:inputType="numberDecimal"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="16dp"/>

    <!-- Add Savings Button -->
    <Button
        android:id="@+id/addSavingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Savings"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="@drawable/button_bg"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        />

    <!-- Goal Progress Bar -->
    <ProgressBar
        android:id="@+id/goalProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0"
        android:max="100"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
